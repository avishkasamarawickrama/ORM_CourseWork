<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="456.0" prefWidth="727.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.Controllers.LoginController">

    <!-- Username Field -->
    <Label layoutX="150.0" layoutY="120.0" text="USER NAME :">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <TextField fx:id="txtUsername" layoutX="270.0" layoutY="115.0" prefWidth="200.0" promptText="Enter Username or User ID" style="-fx-border-color: green;" />

    <!-- Password Field -->
    <Label layoutX="150.0" layoutY="180.0" text="PASSWORD :" />
    <PasswordField fx:id="txtPassword" layoutX="270.0" layoutY="175.0" prefWidth="200.0" promptText="Enter Password" style="-fx-border-color: green;" />

    <!-- Login Button -->
    <Button fx:id="btnLogin" layoutX="264.0" layoutY="273.0" onAction="#handleLoginAction" prefWidth="200.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Login" />
   <Label layoutX="248.0" layoutY="35.0" prefHeight="48.0" prefWidth="140.0" text="Login">
      <font>
         <Font name="System Bold" size="34.0" />
      </font>
   </Label>
   <Label fx:id="LblLogin" layoutX="626.0" layoutY="411.0" prefHeight="18.0" prefWidth="79.0" style="-fx-border-color: black;">
      <font>
         <Font name="System Bold Italic" size="16.0" />
      </font>
   </Label>
   <Label layoutX="43.0" layoutY="416.0" text="Create new Account." textFill="#2c2c9a" underline="true" />
   <Label layoutX="376.0" layoutY="211.0" text="Forgot Password?" textFill="#424ed7" underline="true" />

</AnchorPane>
